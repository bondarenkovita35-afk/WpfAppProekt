<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пример WPF" Height="600" Width="1000">
    <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Enter name:" Margin="0,0,0,10"/>
        <TextBox x:Name="NameInput" Width="200" Margin="0,0,0,10"/>
        <Button Content="Say Hello" Width="300" Click="Button_Click"/>
        <TextBlock x:Name="OutputText" Margin="0,10,0,0" FontWeight="Bold"/>
    </StackPanel>
</Grid>
</Window>