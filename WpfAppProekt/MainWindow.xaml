<Window x:Class="WpfAppProekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WpfAppProekt.Views"
        Title="Products" Height="450" Width="800">
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <views:ProductsView Grid.Column="0" Margin="0 0 8 0"/>
        <views:ProductFormView Grid.Column="1" Loaded="ProductFormView_Loaded"/>
    </Grid>
</Window>