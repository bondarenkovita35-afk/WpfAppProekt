<UserControl x:Class="WpfAppProekt.Views.ProductFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:viewmodels="clr-namespace:WpfAppProekt.ViewModels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}" Width="596">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="24"/>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="159*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="4" Text="{Binding Title}" FontWeight="Bold" Margin="0 0 0 12"/>
        <TextBlock Text="Name:" Margin="0,0,8,1" VerticalAlignment="Bottom" FontSize="30" Grid.RowSpan="2" />
        <TextBox   Grid.Row="1" Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="4" Margin="50,0,0,20" Grid.RowSpan="2" FontSize="30" />
        <TextBlock Grid.Row="3" Text="Price:" Margin="0,8,8,1"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="4" Margin="42,0,0,0">
            <TextBox Width="120" Text="{Binding Model.Price}"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="10 0 0 0" Width="110" FontSize="30" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="10 0 0 0" Width="110" FontSize="30" />
            <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="10 0 0 0" Width="110" FontSize="30" />

        </StackPanel>
    </Grid>
</UserControl>
