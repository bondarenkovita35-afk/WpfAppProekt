<UserControl x:Class="WpfAppProekt.Views.ProductFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinWidth="1500" MinHeight="1000"
             d:DesignWidth="1500" d:DesignHeight="1000">

    <UserControl.Resources>
        <!-- Style big buttons -->
        <Style x:Key="BigButton" TargetType="Button">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="28,16"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="MinWidth" Value="250"/>
            <Setter Property="Margin" Value="0,0,24,0"/>
        </Style>

        <!-- Style this target -->
        <Style x:Key="BigTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,8,0,16"/>
            <Setter Property="Padding" Value="20,8"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <!-- Price -->
            <RowDefinition Height="Auto"/>
            <!-- Size -->
            <RowDefinition Height="Auto"/>
            <!-- Age -->
            <RowDefinition Height="Auto"/>
            <!-- Quantity -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="222*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="103*"/>
            <ColumnDefinition Width="110*"/>
        </Grid.ColumnDefinitions>

        <!-- Titel -->
        <TextBlock Grid.ColumnSpan="11"
                   Text="{Binding Title, FallbackValue='Product Form'}"
                   FontSize="48"
                   FontWeight="Bold"
                   Foreground="#222"
                   Margin="0,0,0,40"/>

        <!-- Name -->
        <TextBlock Grid.Row="1"
                   Text="Name:"
                   FontSize="32"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="1"
                 Grid.Column="2"
                 Style="{StaticResource BigTextBox}"
                 Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="9" />

        <!-- Price -->
        <TextBlock Grid.Row="2"
                   Text="Price:"
                   FontSize="32"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="2"
                 Grid.Column="2"
                 Style="{StaticResource BigTextBox}"
                 Text="{Binding Model.Price, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="9" />
        <TextBlock Grid.Row="3"
                   Text="Size:"
                   FontSize="32"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="4"
                 Text="Age:" 
                    FontSize="32"
                     FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0" Grid.ColumnSpan="2"/>
        <TextBox Grid.Row="5"
                 Text="Quantity:" 
                    FontSize="32"
                     FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0" Grid.ColumnSpan="2"/> 





        <!-- Buttons-->
            <StackPanel Grid.Row="6"
                    Grid.ColumnSpan="9"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,40,0,0" Grid.Column="2">
            <Button Style="{StaticResource BigButton}"
                    Content="Save"
                    Background="#0078D7"
                    Foreground="White"
                    Command="{Binding SaveCommand}" Click="Button_Click_4"/>

            <Button Style="{StaticResource BigButton}"
                    Content="Cancel"
                    Background="#AAAAAA"
                    Foreground="White"
                    Command="{Binding CancelCommand}"/>

            <Button Style="{StaticResource BigButton}"
                    Content="Delete"
                    Background="#E81123"
                    Foreground="White"
                    Command="{Binding DeleteCommand}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
