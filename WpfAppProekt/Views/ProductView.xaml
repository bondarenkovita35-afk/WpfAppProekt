<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WpfAppProekt.Views.ProductsView" Width="860" Height="429">
    <DockPanel Margin="20">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 0 10 9">
            <Button Content="Add" Command="{Binding AddCommand}" Margin="0 0 19 0" FontSize="30"/>
            <Button Content="Edit" Command="{Binding EditCommand}" Margin="0 0 19 0" FontSize="30"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}" FontSize="30"/>
        </StackPanel>

        <Canvas>
            <Button Content="ok" Canvas.Left="54" Canvas.Top="56" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Height="14" VerticalAlignment="Top" Width="7">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="48.302"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
        </Canvas>



        <DataGrid ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="400" FontSize="50"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="150" FontSize="50"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
